{
	"compilerOptions": {
		"composite": true,
		"skipLibCheck": true,
		"module": "ESNext",
		"moduleResolution": "bundler",
		"allowSyntheticDefaultImports": true,
		"strict": true
	},
	"include": [
		"vite.config.ts",
		"jest.config.ts"
	],
	"exclude": [
		"src/setupTests.ts",
		"src/tests/*",
		"src/**/*.test.ts",
		"src/**/*.test.tsx"
	],
}